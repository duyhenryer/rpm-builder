[Unit]
Description=My Service - Hello API
After=my-service-infra.target
Requires=my-service-infra.target
PartOf=my-service-all.target

[Service]
Type=exec
User=nobody
Group=nobody
WorkingDirectory=/opt/my-service/apps/hello-api
ExecStart=/opt/my-service/apps/hello-api/hello-api
Restart=always
RestartSec=10
StandardOutput=append:/var/log/my-service/hello-api/stdout.log
StandardError=append:/var/log/my-service/hello-api/stderr.log
# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=full
ProtectHome=true
ReadWritePaths=/var/log/my-service/hello-api

[Install]
WantedBy=multi-user.target
